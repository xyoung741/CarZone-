<%- include ("../partials/header") %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			
		
			<h1>Welcome To Car Zone!</h1>
			<p>Your car review super source.</p>
			<p>
				<a class="btn btn-primary btn-large" href="/cars/new">Add a New Car</a>
			</p>
		</div>
	</header>


	<div class="row">
		<div class="col-lg-12">
			<h3>Our Most Popular Cars!</h3>
		</div>
	</div>
	
	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% cars.forEach(function(car){ %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src="<%= car.image %>">
				<div class="caption">
					<h4><%= car.name %></h4>
				</div>
				<p>
					<a href="/cars/<%= car._id %>" class="btn btn-primary">More Info</a>
				</p>
			</div>
		</div>

		<% }); %>
	</div>
</div>

	


<%- include ("../partials/footer") %>